package StepDefinations;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;

import cucumber.api.java.en.And;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;

public class StepDefination {
	
	public Chrome_init ci = new Chrome_init();
	public final WebDriver dv = ci.getDriver();
		
	@Given("^The browser should be opened$")
    public void the_browser_should_be_opened() throws Throwable {
        
    }

    @Given("^push the url \"([^\"]*)\" to the browser$")
    public void push_the_url_something_to_the_browser(String url) throws Throwable {
    	dv.get(url);
    }

    @Given("^Click on all dropdown button$")
    public void click_on_all_dropdown_button() throws Throwable {
    	push_the_url_something_to_the_browser(ObjectRepository.ResourceXPath.url);
    	dv.findElement(By.xpath(ObjectRepository.ResourceXPath.dropdownALL)).click();
    }

    @Given("^Get the count of the search result$")
    public void get_the_count_of_the_search_result() throws Throwable {
    }

    @Given("^Capture any customer review$")
    public void capture_any_customer_review() throws Throwable {
    }

    @Given("^Verify the CART option$")
    public void verify_the_cart_option() throws Throwable {
    }

    @Given("^Click on the CART option$")
    public void click_on_the_cart_option() throws Throwable {
    }

    @Given("^Remove the element from the cart$")
    public void remove_the_element_from_the_cart() throws Throwable {
    }

    @Given("^Close the chrome driver  $")
    public void close_the_chrome_driver() throws Throwable {
    }

    @When("^Select the books with following details$")
    public void select_the_books_with_following_details() throws Throwable {
    }

    @Then("^redirect to the page$")
    public void redirect_to_the_page() throws Throwable {
    }

    @Then("^Select \"([^\"]*)\" from the dropdown$")
    public void select_something_from_the_dropdown(String strArg1) throws Throwable {
    }

    @Then("^Click on the search field$")
    public void click_on_the_search_field() throws Throwable {
    }

    @Then("^Verify the book name, authorname, price$")
    public void verify_the_book_name_authorname_price() throws Throwable {
    }

    @Then("^write it on excel file$")
    public void write_it_on_excel_file() throws Throwable {
    }

    @Then("^Add the book to the CART$")
    public void add_the_book_to_the_cart() throws Throwable {
    }

    @Then("^Verify the book name in the cart$")
    public void verify_the_book_name_in_the_cart() throws Throwable {
    }

    @Then("^Verify the message \"([^\"]*)\"$")
    public void verify_the_message_something(List<String> list1) throws Throwable {
    }

    @And("^Type \"([^\"]*)\" in the field$")
    public void type_something_in_the_field(String strArg1) throws Throwable {
    }

    @And("^Click Search Button$")
    public void click_search_button() throws Throwable {
    }

    @And("^Write it in excel file$")
    public void write_it_in_excel_file() throws Throwable {
    }
	
}
